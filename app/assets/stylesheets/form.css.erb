h1 {
    text-align: center;
    margin-bottom: 40px;
    margin-top: 20px;
    color: white;
}

input {
    border-radius: 40px;
    padding: 15px 20px;
    outline-style: none;
    width: 40%;
    margin-bottom: 3rem;
}

form {
    width: 100%;
    text-align: center;
    color: white;
}

.submit-btn {
    width: 15%;
    margin-bottom: 170px;
}

body {
    background-image: url('<%= asset_path 'bg-ror.jpg' %>');
    background-size: cover;
    background-repeat: no-repeat;
}

@media only screen and (min-width: 320px) {
   input {
       width: 80%;
   }

   .submit-btn {
       width: 22.5%;
   }
}

@media only screen and (min-width: 1000px) {
   .submit-btn {
       max-width: 10%;
       font-size: 1.5rem;
   }

   label {
       font-size: 1.5rem;
   }
}