<section class="users container">
    <% @users.each do |user| %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= user.name %></h5>
                <p class="card-text"><%= user.email %></p>
                <div class="edit">
                    <%= link_to 'Edit', users_edit_path(user), :class => 'btn card-btn btn-secondary' %>
                    <%= link_to 'Delete', users_delete_path(user), data: {confirm: "Do you really want to delete the entry?"}, :class => 'btn card-btn btn-secondary' %>
                </div>
            </div>
        </div>
    <% end %>
</section>
<div class="new_register">
<%= link_to 'New Register', form_path, :class => 'btn btn-secondary' %>
</div>